{% extends "_base/module.html.jinja" %}

{% block summary scoped %}

  {#- Add new Block <source_link> before the embedded Source Code <source> (after <summary). -#}
  {% block source_link scoped %}
    {#- source_link block.
        
    This block renders the Link to the Source Code in the Repository.
    -#}

    {% if config.show_source_link and module.source_link %}
      <div class="source-link module-source-link">
        {{ config.source_link_label }}: <a href="{{ module.source_link }}">{{ config.source_link_description }}</a>
      </div>
    {% endif %}
  {% endblock source_link %}

  {#- Render Parent Template Original <summary> Block. -#}
  {{ super() }}

{% endblock summary %}